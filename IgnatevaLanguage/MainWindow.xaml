<Window x:Class="IgnatevaLanguage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IgnatevaLanguage"
        mc:Ignorable="d"
        Title="Игнатьева Лангуаге" Height="700" Width="1100"
        FontFamily="Comic Sans MS" Icon="img/school_logo.ico"
        MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid Background="#FFE7FABF"/>
        <Image Source="img/school_logo.png" HorizontalAlignment="Left"/>
        <TextBlock Text="Игнатьева Лангуаге" FontSize="26" HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        <Frame Grid.Row="1" NavigationUIVisibility="Hidden"
               ContentRendered="Frame_ContentRendered"
               Name="MainFrame"/>
        <Button Content="Назад" Name="BtnBack" HorizontalAlignment="Right"
                Click="BtnBack_Click"/>

    </Grid>
</Window>
